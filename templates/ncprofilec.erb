<% @tools.each do |tool| -%>
alias start_<%= tool['tool_cmd'] %>="$OMNIHOME/bin/nco_pa_start -server <%= tool['pa_name'] %> -user <%= tool['nc_act'] %> -password <%= tool['nc_pwd'] %> -process <%= node['prbsrv']['obs_domain'] %><%= tool['tool_srv'] %>"
alias stop_<%= tool['tool_cmd'] %>="$OMNIHOME/bin/nco_pa_stop -server <%= tool['pa_name'] %> -user <%= tool['nc_act'] %> -password <%= tool['nc_pwd'] %> -process <%= node['prbsrv']['obs_domain'] %><%= tool['tool_srv'] %>"
alias check_<%= tool['tool_cmd'] %>="$OMNIHOME/probes/nco_p_syntax -server <%= tool['pa_name'] %> -rulesfile $NC_RULES_HOME/<%= tool['rules_file'] %>"
<% end -%>
